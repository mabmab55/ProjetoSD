<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mabmab.sistemasdistribuidos.ControllerEmpresaInterface">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Razão Social:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="razaoSocialEmpresa" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailEmpresa" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="CNPJ:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="cnpjEmpresa" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Senha:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="senhaEmpresa" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Descrição:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="descricaoEmpresa" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Ramo:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="ramoEmpresa" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="center">
        <Button text="Atualizar" onAction="#attDadosEmpresa"/>
        <Button text="Logout" onAction="#logoutEmpresa"/>
        <Button text="Apagar" onAction="#deleteEmpresa"/>
    </HBox>
</VBox>
